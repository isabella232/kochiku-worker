#!/usr/bin/env bash

orphan_processes() {
  kochiku_worker_pids=$(ps -o pid= --user kochiku-worker)
  for pid in $kochiku_worker_pids
  do
    ppid=$(ps -o ppid= --pid $pid)
    if [[ $ppid=="1" ]]; then
      echo $pid
    fi
  done
}

if [ -n "$(orphan_processes)" ]; then
  kill $(orphan_processes)
fi
